<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <corners android:radius="5dip" />
            <gradient android:angle="-90" android:endColor="@color/background_tab_pressed_select" android:startColor="@color/background_tab_pressed_select" />
            <padding android:bottom="1dp" android:top="1dp" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape>
            <corners android:radius="5dp" />
            <gradient android:angle="-90" android:endColor="@color/background_tab_pressed" android:startColor="@color/background_tab_pressed" />
            <padding android:bottom="1dp" android:top="1dp" />
        </shape>

    </item>
</selector>