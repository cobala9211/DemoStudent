<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="1dip" />
            <gradient android:angle="-90" android:endColor="@color/color_button_error_select" android:startColor="@color/color_button_error_select" />
            <padding android:bottom="1dp" android:top="1dp"></padding>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="1dip" />
            <gradient android:angle="-90" android:endColor="@color/color_button_error" android:startColor="@color/color_button_error" />
            <padding android:bottom="1dp" android:top="1dp"></padding>
        </shape>
    </item>
</selector>