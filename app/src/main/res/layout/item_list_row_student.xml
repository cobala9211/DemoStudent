<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@android:color/white">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/tvDurationVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/videoView"
        android:layout_margin="20dp"
        android:background="@android:color/black"
        android:text="10:20"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tvTitleVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/videoView"
        android:paddingLeft="10dp"
        android:text="Title Video" />

    <TextView
        android:id="@+id/tvVideoDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/videoView"
        android:paddingBottom="10dp"
        android:layout_marginLeft="10dp"
        android:text="this is date:  2016/10/10" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvVideoDate"
        android:layout_below="@+id/tvTitleVideo"
        android:layout_toRightOf="@+id/videoView"
        android:padding="10dp"
        android:text="video description" />
</RelativeLayout>