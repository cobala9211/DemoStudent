<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frameLayoutView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white" />

    <LinearLayout
        android:id="@+id/llControls"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <Button
            android:id="@+id/btnDemoViewPager1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Demo View Pager 1" />

        <Button
            android:id="@+id/btnDemoViewPager2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Demo View pager 2" />

        <Button
            android:id="@+id/btnDemoProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Demo Circle Progress bar" />
    </LinearLayout>
</RelativeLayout>