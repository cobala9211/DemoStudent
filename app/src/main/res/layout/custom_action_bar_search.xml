<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:minHeight="?attr/actionBarSize"
    app:contentInsetStart="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background_toolbar">

        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/ic_search_button_on"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/ic_close"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTitleSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="ログイン"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/edtInputSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/imgClose"
            android:background="@null"
            android:hint="input search here!"
            android:padding="10dp"
            android:textColorHint="@android:color/white"
            android:visibility="gone" />
    </RelativeLayout>
</android.support.v7.widget.Toolbar>
