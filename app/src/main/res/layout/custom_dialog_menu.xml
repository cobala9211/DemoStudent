<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/viewCircleYear"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_add_new" />

        <TextView
            android:id="@+id/tvTextYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/viewCircleYear"
            android:padding="5dp"
            android:text="サーバメンテナンス中" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/viewCircleSubject"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_add_new" />

        <TextView
            android:id="@+id/tvTextSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/viewCircleSubject"
            android:padding="5dp"
            android:text="サーバメンテナンス中" />
    </RelativeLayout>


</LinearLayout>