<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_member_register">
        <item name="android:background">@drawable/custom_button_login</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="button_login_confirm">
        <item name="android:background">@drawable/custom_button_confirm_login</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="button_login_confirm_error">
        <item name="android:background">@drawable/custom_button_confirm_error</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Animations" />

    <style name="Animations.SmileWindow">
        <item name="@android:windowEnterAnimation">@anim/slide_in_top_dialog</item>
        <item name="@android:windowExitAnimation">@anim/slide_out_bottom_dialog</item>
    </style>

    <color name="default_circle_indicator_page_color">#00000000</color>
    <color name="holo_blue_dark">#ff0099cc</color>

    <integer name="default_circle_indicator_orientation">0</integer>
    <dimen name="default_circle_indicator_radius">4dp</dimen>

    <bool name="default_circle_indicator_snap">false</bool>

    <color name="default_circle_indicator_stroke_color">#FFDDDDDD</color>

    <dimen name="default_circle_indicator_stroke_width">1dp</dimen>
    <bool name="default_circle_indicator_centered">true</bool>

    <!--custom progress bar new-->

    <style name="Widget" />

    <style name="CircularProgressBarNew" parent="Widget">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="cpbn_progressColor">@color/colorProgress</item>
        <item name="cpbn_backgroundColor">@color/item_list_expandable_orange</item>
        <item name="cpbn_hasShadow">false</item>
        <item name="cpbn_strokeWidth">70</item>
        <item name="cpbn_titleColor">@color/colorProgress</item>
        <item name="cpbn_subtitleColor">@color/colorProgress</item>
    </style>

</resources>
